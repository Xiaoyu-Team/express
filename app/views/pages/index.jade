extends ../layout.jade

block content
    .container
        .row
            each cat in catetories
                .panel.panel-primary
                    .panel-heading
                        h3() 
                         a(href="/search?cat=#{cat._id}&p=2" style="color:white") #{cat.name}
                    .panel-body
                        if cat.movies && cat.movies.length > 0
                           each item in cat.movies
                                .col-md-2
                                    .thumbnail
                                        a(href="/movie/#{ item._id }")
                                            img(src="#{ item.poster }",alt="#{ item.title }")
                                        .caption
                                            h3 #{ title }
                                            p: a.btn.btn-primary(href="/movie/#{item._id}",role="button") 观看预告片
